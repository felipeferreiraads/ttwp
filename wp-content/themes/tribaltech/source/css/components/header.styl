.site-header
    height 110vh
    background-size: cover
    position relative
    overflow hidden
    padding 100px 0 150px
    margin-top 40px
    .video
        position absolute
        bottom 0
        right 0
        z-index -1
        width 100%
        height 100%
    .grid
        width 50%
        display flex
        flex-direction column
        justify-content: space-between
        align-items: flex-start

    +below($bp.lg)
        padding 50px 0 100px
    +below($bp.sm)
        height auto
        > *
            margin-bottom 40px
    h1
        color: $color.white
        text-align center
        font-weight 200
        font-family: $font-family.secondary
        font-size 90px
        margin-bottom 20px
        line-height 1
        +below($bp.lg)
            font-size 50px
        +below($bp.sm)
            font-size 40px
    p
        font-size 25px
        text-transform uppercase
        font-family: $font-family.secondary
        line-height 1.2
        margin-bottom 30px
        span
            display block
        img 
            height 18px
    .info
        display flex
        flex-direction column
    .tickets
        display block
        font-family: $font-family.secondary
        text-transform uppercase
        height 60px
        padding 0 25px 0 20px
        background rgba(0,0,0,0.7)
        color: $color.white
        border: 3px solid $color.white
        line-height 56px
        font-size 16px
        letter-spacing: 8px
        transition .2s
        margin-bottom 40px
        +below($bp.sm)
            font-size 14px
            height 50px
            line-height 46px
        &:hover
            color: $color.black
            background: $color.white
.social
    display flex
    flex-direction column
    color: $color.white
    &.pink
        color: $color.secondary
        margin-top 70px
        > span
            font-size: 22px
        > .links
            a
                border-color: $color.secondary !important
                &:hover
                    background: $color.secondary
    &.center
        align-items: center
        color: $color.primary-three !important
        .links
            a
                border-color: $color.primary-three !important
    span
        font-size 14px
        letter-spacing: 8px
        color: inherit
        font-family: $font-family.secondary
        text-transform uppercase
    .links
        display flex
        margin-top 20px;
        a
            width 35px
            height 35px
            border: 2px solid $color.white
            border-radius 35px
            display flex
            align-items: center
            justify-content: center
            transition .2s
            &:hover
                background: $color.white
                > span
                    color: $color.black !important
            &:not(:last-child)
                margin-right 10px
            &
            span
                letter-spacing: 0
.skew
    width: 100%
    height 100px
    background: $color.white
    transform skewY(-3deg)
    position absolute
    bottom -50px
    left 0
    &.black
        background: $color.black
    &.gray
        background: $color.gray