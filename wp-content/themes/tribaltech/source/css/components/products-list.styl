.product-list
    width: 400px
    max-width: 100%;
    display flex
    flex-direction: column
    padding: 25px;
    +below($bp.sm)
        padding: 25px 0;
    figure
        width: 100%
        height 350px
        img
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    .button
        font-family: $font-family.secondary
        padding: 0 10px
        background: #000
        color: #fff
        text-transform: uppercase
        font-size: 18px
        font-weight: bold
        align-self: flex-start
        margin-top: 20px
        line-height: 2.4
        outline: none
        transition: .2s
        &:hover
            background: #222
    .price-container
        display flex
        margin-top: 15px
    .price
        font-size: 30px
        color #fff
        font-weight: bold
        font-family: $font-family.secondary
        margin-right: 10px
    .installment
        font-size: 20px
        color #fff
        font-weight: bold
        font-family: $font-family.secondary

.sizer-product
    width: 400px;
    max-width: 100%;

.filter-products
    background: black
    float right
    margin: 0 25px 30px 0
    width: 185px
    +below($bp.sm)
        width: 100%
        margin: 0 0 30px
    select
        padding: 10px
        appearance none
        -moz-appearance: none
        -webkit-appearance: none
        font: bold 20px $font-family.secondary
        color white
        background: transparent
        border: none
        text-transform: uppercase
        letter-spacing: 3px
        width: 100%