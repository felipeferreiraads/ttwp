.product-list
    width: 350px
    display flex
    flex-direction: column
    figure
        width: 100%
        height 350px
        img
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    .button
        font-family: $font-family.secondary
        padding: 0 10px
        background: #000
        color: #fff
        text-transform: uppercase
        font-size: 18px
        font-weight: bold
        align-self: flex-start
        margin-top: 20px
        line-height: 2.4
        outline: none
        transition: .2s
        &:hover
            background: #222
    .price-container
        display flex
        margin-top: 15px
    .price
        font-size: 30px
        color #fff
        font-weight: bold
        font-family: $font-family.secondary
        margin-right: 10px
    .installment
        font-size: 20px
        color #fff
        font-weight: bold
        font-family: $font-family.secondary