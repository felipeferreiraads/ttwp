.tickets
    padding 0 0 150px
    position relative
    h2
        color: $color.primary-three
    +below($bp.md)
        padding 0 0 100px
    .grid
        display flex
        flex-wrap: wrap
        +below($bp.lg)
            flex-direction column
            align-items: center
    .ticket
        width 100%
        background: $color.black
        padding 50px
        display flex
        flex-direction column
        position relative
        &:not(:last-child)
            margin-bottom 20px
        +below($bp.lg)
            padding 50px 20px
        .category
            font-size 35px
            font-family: $font-family.secondary
            margin-bottom 30px
            color: $color.white
            letter-spacing: 5px
        .price
            font-size 40px
            font-family: $font-family.secondary
            margin-bottom 30px
            color: $color.blue
            i
                font-style normal
                letter-spacing: 15px
        .text
            font-size 18px
            max-width 70%
            line-height 1.5
            margin-bottom 30px
            color: $color.white
            line-height 1.7
            +below($bp.lg)
                max-width 100%
            &.strong
                font-size 20px
        .link
            width 230px
            max-width: 100%
            height 60px
            border: 2px solid $color.white
            display block
            padding 15px
            display flex
            justify-content: space-between
            align-items: center
            transition .2s
            position absolute
            bottom 50px
            right 50px
            color: $color.white
            +below($bp.lg)
                position initial
            &:hover
                background: $color.white
                color: $color.black
                border-color: $color.white
            .buy
                font-size 18px
                font-family: $font-family.secondary
                text-transform uppercase
                letter-spacing: 10px
                line-height 56px
            .icon
                font-size 22px