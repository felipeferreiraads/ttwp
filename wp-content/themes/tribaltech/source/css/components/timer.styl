.timer
    padding 100px 0 150px
    position relative
    +below($bp.md)
        padding 50px 0 120px
    .title
        display block
        text-align center
        color #2b1718
        letter-spacing: 30px
        font-size 25px
        font-family: $font-family.secondary
        margin-bottom 50px
    .grid
        display flex
        justify-content: center
        +below($bp.md)
            flex-direction column
    .item-time
        display flex
        flex-direction column
        align-items: center
        &:not(:last-child)
            margin-right 50px
            +below($bp.md)
                margin-right 0
        +below($bp.md)
            margin 0 0 50px 0
        .time
            font-size 100px
            color: $color.secondary
            font-family: $font-family.secondary
        .measure
            font-size: 30px
            color: $color.text
    a
        margin-top 100px
        display flex
        justify-content: center
    .triangle
        width: 0
        height: 0
        border-style: solid
        border-width: 45px 25px 0 25px
        border-color: $color.primary-two transparent transparent transparent

